{
  "routes": [
    { "src": "/css/(.*)", "dest": "/css/$1", "continue": true },
    { "src": "/js/(.*)", "dest": "/js/$1", "continue": true },
    { "src": "/img/(.*)", "dest": "/img/$1", "continue": true },
    { "src": "/(.*)", "dest": "/index.html" },
    { "src": "/404", "dest": "/404.html", "status": 404 }
  ],
  "rewrites": [
    { "source": "/src/:page", "destination": "/src/:page.html" },
    { "source": "/404", "destination": "/404.html" }
  ]
}